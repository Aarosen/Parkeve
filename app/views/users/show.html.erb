<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
   		<% if current_user.admin? && !current_user?(@user_destroy) %>
   			<div>
					<%= link_to "Users", users_path %>
				</div>
   		<% end %>
    </section>
  </aside>
</div>